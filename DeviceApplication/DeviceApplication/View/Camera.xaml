<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DeviceApplication.View.Camera"
             Title="Camera">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout>
                <Label Text="Camera Start"></Label>
                <Button Text="Take a photo"
                    x:Name="takephoto"
                    TextColor="Black"
                    Clicked="TakeAPhotoButton_OnClicked">

                </Button>
                <Button Text="Pick photo"
                    x:Name="pickphoto"
                    TextColor="Black"
                    Clicked="Pick_photo_button_clicked">
                </Button>

                <Button Text="Take A Video"
                    x:Name="takevideo"
                    TextColor="Black"
                    Clicked="Take_video_button_clicked">
                </Button>

                <Button Text="pick a video"
                    x:Name="pickvideo"
                    TextColor="Black"
                    Clicked="Pick_video_button_clicked">
                </Button>
                <Image x:Name="image"/>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>
            <StackLayout HorizontalOptions="Center" VerticalOptions="Start">

                <Label Margin="10,0,0,10" FontAttributes="Bold"  TextColor="#CA6F1E" HorizontalTextAlignment="Center"></Label>

                <Label HorizontalOptions="Center" Text="Copy Me" x:Name="lblCopy"></Label>
